<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/RowVerticalPadding"
    android:paddingEnd="@dimen/RowHorizontalPadding"
    android:paddingLeft="@dimen/RowHorizontalPadding"
    android:paddingRight="@dimen/RowHorizontalPadding"
    android:paddingStart="@dimen/RowHorizontalPadding"
    android:paddingTop="@dimen/RowVerticalPadding"
    android:weightSum="2">

    <TextView
        android:id="@+id/StartTimeValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/EndTimeValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

</LinearLayout>